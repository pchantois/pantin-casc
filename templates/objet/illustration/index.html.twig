{% extends 'base.html.twig' %}

{% block title %}Illustration index{% endblock %}

{% block body %}
    <h1>Illustration index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for illustration in illustrations %}
            <tr>
                <td>{{ illustration.id }}</td>
                <td>{{ illustration.image }}</td>
                <td>{{ illustration.updatedAt ? illustration.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('objet_illustration_show', {'id': illustration.id}) }}">show</a>
                    <a href="{{ path('objet_illustration_edit', {'id': illustration.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('objet_illustration_new') }}">Create new</a>
{% endblock %}
